<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal" android:background="@drawable/car_masked_ripple_background" android:focusable="true" android:layout_width="fill_parent" android:layout_height="@dimen/car_list_item_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_gravity="center_vertical" android:id="@+id/icon_container" android:layout_width="@dimen/car_list_item_icon_size" android:layout_height="@dimen/car_list_item_icon_size" android:layout_marginRight="@dimen/car_list_item_icon_right_margin">
        <ImageView android:id="@+id/icon" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
    </FrameLayout>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:id="@+id/text_container" android:duplicateParentState="true" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_weight="1.0">
        <TextView android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/car_text_vertical_margin" android:singleLine="true" style="@style/CarBody1" />
        <TextView android:ellipsize="end" android:gravity="end" android:id="@+id/text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/CarBody2" />
    </LinearLayout>
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/right_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/car_list_item_right_icon_margin" android:scaleType="center" />
</LinearLayout>